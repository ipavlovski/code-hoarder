---
import type { ImageMetadata } from 'astro';
import { Image } from 'astro:assets';

interface Props {
   src: string;
   alt: string;
}

import { images } from '../../content/config'

const { src, alt } = Astro.props;

console.log(src, alt)
const result = images[src]()
---

<div class="imageWrapper">
    <Image src={result} alt={'lol'} class="imageElement" />
</div>

<style>
    .imageWrapper {
    position: relative;
    display: block;
    height: 200px;
    width: 100%;
    margin: 2rem auto;
}

.imageElement {
    position: absolute;
    height: 100%;
    width: 100%;
    inset: 0;
    object-fit: cover;
    color: transparent;
    border-radius: 8px;
}

</style>